<%- include('header') %>
    <!-- partial:partials/_navbar -->
    
    <%- include('navbar') %>
    
    
    
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar -->
      <% if(role=="Admin") { %>
        <%- include('Admin_sidebar') %>
        <% } else { %>
          <%- include('sidebar') %>
          <% } %>
            <!-- partial -->
       <!-- partial -->
       <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">New Product Registration</h4>
                  <p class="card-description">
                    <% if(message.length > 0) { %>
                      <%= message %>
          <% } %></h6>
                  </p>
                  <form class="forms" method="POST" action="new_product">
                    
                    <div class="form-group row">
                      <div class="col-md-6 row"> 
                      <label for="productId"  class="col-sm-3 col-form-label">Product Id:</label>
                      <div class="col-sm-9">
                        <input type="text" maxlength="10" name="prodId" class="form-control" id="productId" placeholder="Product Id">
                      </div>
                      </div>
                      <div class="col-md-6 row"> 
                        <label for="date"  class="col-sm-3 col-form-label">Date:</label>
                        <div class="col-sm-9">
                          <input type="date" name="date" class="form-control" id="date" placeholder="Date of Registration">
                        </div>
                        </div>
                        <div class="col-md-6 row"> 
                          <label for="productName" class="col-sm-3 col-form-label">Product Name</label>
                          <div class="col-sm-9">
                            <input type="text" name="prodName" class="form-control" id="productName" placeholder="Name of Product">
                          </div>
                          </div>
                          <div class="col-md-6 row"> 
                            <label for="supplierId" class="col-sm-3 col-form-label">Supplier Id:</label>
                            <div class="col-sm-9">
                                           <select name="supId" class="form-control" id="supplierId">
                                <% supplier.forEach(function(cus){ %>
                                  <option value="<%=cus['SupplierId'] %>" ><%=cus['SupplierCompanyName'] %></option>
                                <%});     %>
                                    </select>
                            </div>

                            </div>
                          <div class="col-md-6 row">
                            <label for="costPrice" class="col-sm-3 col-form-label">Cost Price</label>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <div class="input-group">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text bg-primary text-white">$</span>
                                      </div>
                                      <input type="number" name="costPrice"  id="costPrice" class="form-control" aria-label="Amount (to the nearest dollar)">
                                      <div class="input-group-append">
                                        <span class="input-group-text">.00</span>
                                      </div>
                                    </div>
                                  </div>
                          </div>
                          </div>
                          
                          <div class="col-md-6 row">
                            <label for="sellingPrice" class="col-sm-3 col-form-label">Selling Price</label>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <div class="input-group">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text bg-primary text-white">$</span>
                                      </div>
                                      <input type="number" name="sellingPrice" id="sellingPrice" class="form-control" aria-label="Amount (to the nearest dollar)">
                                      <div class="input-group-append">
                                        <span class="input-group-text">.00</span>
                                      </div>
                                    </div>
                                  </div>
                          </div>
                          </div>
                          <div class="col-md-6 row">
                            <label for="initialQty" class="col-sm-3 col-form-label">Initial Quantity</label>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <div class="input-group">
                                     
                                      <input type="number" name="initialQty" id="initialQty" class="form-control" aria-label="Quantity">
                                      <div class="input-group-append">
                                        <span class="input-group-text">.00</span>
                                      </div>
                                    </div>
                                  </div>
                          </div>
                          </div>
                          <div class="col-md-6 row">
                            <label for="minimumQty" class="col-sm-3 col-form-label">Min. Quantity</label>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <div class="input-group">
                                     
                                      <input type="number" name="minimumQty" id="minimumQty" class="form-control" aria-label="Quantity">
                                      <div class="input-group-append">
                                        <span class="input-group-text">.00</span>
                                      </div>
                                    </div>
                                  </div>
                          </div>
                          </div>

                     <div class="col-md-6 row">
                            <label for="productCategory" class="col-sm-3 col-form-label">Product Category</label>
                            <div class="col-sm-9">
                                <div class="form-group">
                              <select class="form-control" name="productCategory" id="productCategory">
                                      <option>1</option>
                                      <option>2</option>
                                      <option>3</option>
                                      <option>4</option>
                                      <option>5</option>
                                    </select>
                                  </div>
                          </div>
                          </div>
                 
                    </div>
                  
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
            
          </div>
        </div>
       <!-- content-wrapper ends -->
        <!-- partial:partials/_footer -->
        <%- include('footer') %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page-->
  <!-- End plugin js for this page-->
  <!-- inject:js -->
  <script src="js/off-canvas.js"></script>
  <script src="js/hoverable-collapse.js"></script>
  <script src="js/template.js"></script>
  <!-- endinject -->
  <!-- Custom js for this page-->
  <!-- End custom js for this page-->
</body>

<html>