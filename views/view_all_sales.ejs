<%- include('header') %>
    <!-- partial:partials/_navbar -->
    
    <%- include('navbar') %>
    
    
    
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar -->
      <% if(role=="Admin") { %>
        <%- include('Admin_sidebar') %>
        <% } else { %>
          <%- include('sidebar') %>
          <% } %>
          <% 
          var formatter = new Intl.NumberFormat(undefined, {
            style: 'currency',
            currency: 'NGN',
          });
          
          
          %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Sales Table</h4>
                  <p class="card-description">
                    <% if(message.length > 0) { %>
                      <%= message %>
          <% } %>
                  </p>
                  <div class="table-responsive pt-3">
                    <table name="viewAllSales" id="viewAllSales" class="table table-striped table-dark">
                      <thead>
                        <tr>
                          <th>
                            #Id
                          </th>
                          <th>
                           Invoice No
                          </th>
                          <th>
                            Client Id
                           </th>
                     <!-- <th>
                           Sales Items Details
                          </th> -->     
                          <th>
                           Sales Amount
                          </th>
                          <th>
                           Sales Discount
                          </th>
                          <th>
                            Total VAT
                          </th>
                          <th>
                         Amount Due
                          </th>
                         
                          <th>
                            Date
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% sales.forEach(function(cus){ %>
                          <tr>
                            <td><%= cus['Id'] %> </td>
                            <td><%= cus['InvoiceNo'] %> </td>
                            <td><%= cus['ClientId'] %> </td>
                           <!-- <td><%= cus['SalesItemsDetails'] %> </td>--> 
                            <td><%= formatter.format( cus['SalesAmount']) %> </td>
                            <td><%= formatter.format( cus['SalesDiscount']) %> </td>
                            <td><%= formatter.format( cus['TotalVAT']) %> </td>                        
                            <td><%= formatter.format( cus['AmountDue']) %> </td>
                            <td><%= cus['SalesDate'] %> </td>
                            
                            
                          </tr>
                          
                        <%  }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer -->
        <%- include('footer') %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page-->
  <!-- End plugin js for this page-->
  <!-- inject:js -->
  <script src="js/off-canvas.js"></script>
  <script src="js/hoverable-collapse.js"></script>
  <script src="js/template.js"></script>
  <script type="module" src="js/viewsales.js"> </script>
  <!-- endinject -->
  <!-- Custom js for this page-->
  <!-- End custom js for this page-->
</body>

</html>